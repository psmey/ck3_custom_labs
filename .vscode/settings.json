{
    "[paradox]": {
        "files.encoding": "utf8bom"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.organizeImports": "always",
        "source.organizeLinkDefinitions": "always"
    },
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.rulers": [80, 120],
    "editor.wordWrap": "off",
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "cmd": "ck3-tiger --game /workspaces/crusader_kings_3 --config /workspaces/ck3_custom_labs/ck3-tiger.conf --unused /workspaces/ck3_custom_labs/mod/descriptor.mod > /workspaces/ck3_custom_labs/ck3-tiger.log",
                "match": "mod/.*\\.txt$"
            }
        ]
    },
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "markdown.extension.preview.autoShowPreviewToSide": true,
    "python.analysis.languageServerMode": "full",
    "python.languageServer": "Pylance",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true
}
